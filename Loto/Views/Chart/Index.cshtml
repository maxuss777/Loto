<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html>

    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
        <title>amCharts examples</title>
        <link type="text/css" rel="stylesheet" href="@Url.Content("~/Scripts/images/style.css")" />
        <script src="~/scripts/jquery-3.2.1.min.js" type="text/javascript"></script>
        <script src="~/scripts/amcharts/amcharts.js" type="text/javascript"></script>
        <script src="~/scripts/amcharts/serial.js" type="text/javascript"></script>
        <script src="~/scripts/amcharts/lang/de.js" type="text/javascript"></script>
        <script src="~/scripts/chart/chart.js" type="text/javascript"></script>
    </head>

    <body>
        <div class="selector">
            <select onchange="setData(this.options[this.selectedIndex].value);">
                <option value="0" selected="selected">1-position</option>
                <option value="1">2-position</option>
                <option value="2">3-position</option>
                <option value="3">4-position</option>
                <option value="4">5-position</option>
                <option value="5">6-position</option>
                <option value="6">megaball</option>
            </select>
        </div>
        <div id="chartdiv" style="width: 100%; height: 700px;"></div>
        <div style="margin-left:35px;">
            <input type="radio" checked="true" name="group" id="rb1" onclick="setPanSelect()"> Select
            <input type="radio" name="group" id="rb2" onclick="setPanSelect()"> Pan
            <input type="button" name="group" value="Differences" onclick="switchToDifferenceOnly()">
		</div>
    </body>

</html>